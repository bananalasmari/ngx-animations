{
  "name": "animation-lib",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:animation-lib": "node dist/animation-lib/server/server.mjs",
    "build:lib": "ng build @elm/ngx-animations --configuration production",
    "build:lib:dev": "ng build @elm/ngx-animations",
    "watch:lib": "ng build @elm/ngx-animations --watch",
    "test:lib": "ng test @elm/ngx-animations",
    "pack:lib": "cd dist/elm/ngx-animations && npm pack",
    "publish:lib": "npm run build:lib && cd dist/elm/ngx-animations && npm publish --access public",
    "publish:lib:dry": "npm run build:lib && cd dist/elm/ngx-animations && npm publish --dry-run"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@10.8.2",
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/platform-server": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@angular/ssr": "^21.0.0",
    "express": "^5.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.0",
    "@angular/cli": "^21.0.0",
    "@angular/compiler-cli": "^21.0.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/express": "^5.0.1",
    "@types/node": "^20.17.19",
    "jsdom": "^27.1.0",
    "ng-packagr": "^21.0.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.12",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}
